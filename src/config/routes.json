[
  {
    "path": "/api/v1/auth/**",
    "target": "${AUTH_SERVICE_URL}",
    "methods": ["POST", "PUT"],
    "middleware": []
  },
  {
    "path": "/api/v1/users/**",
    "target": "${AUTH_SERVICE_URL}",
    "methods": ["GET", "PUT", "DELETE"],
    "middleware": ["auth", "session", "rbac"]
  },
  {
    "path": "/api/v1/qr/**",
    "target": "${QR_SERVICE_URL}",
    "methods": ["GET", "POST", "PUT", "PATCH"],
    "middleware": ["auth", "session", "rbac"]
  },
  {
    "path": "/api/v1/dashboard/**",
    "target": "${ANALYTICS_SERVICE_URL}",
    "methods": ["POST"],
    "middleware": ["auth", "session", "rbac"]
  },
  {
    "path": "/gateway/api/v1/**",
    "target": "${AUTH_SERVICE_URL}",
    "methods": ["GET"],
    "middleware": []
  }
]
